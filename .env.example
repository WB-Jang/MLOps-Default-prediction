DATABASE_URL=postgresql://mlops_user:mlops_password@localhost:5432/loan_default
AIRFLOW_DB_URL=postgresql+psycopg2://mlops_user:mlops_password@localhost:5432/airflow_db

# Model configuration
MODEL_PATH=./models
F1_SCORE_THRESHOLD=0.8
RETRAINING_SAMPLE_THRESHOLD=1000

# Model hyperparameters
D_MODEL=32
NHEAD=4
NUM_LAYERS=6
DIM_FEEDFORWARD=64
DROPOUT_RATE=0.3
FINAL_HIDDEN=128
PROJECTION_DIM=128

# Training configuration
BATCH_SIZE=32
LEARNING_RATE=0.0003
NUM_EPOCHS=50
EARLY_STOPPING_PATIENCE=5

# Airflow configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here
